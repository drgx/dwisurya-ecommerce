{{ header }} 

<div class="container">
  <div class="wrapper_container row">{{ column_left }} 
    {% if (column_left and column_right) %} 
    {% set class = 'col-sm-6' %} 
    {% elseif (column_left or column_right) %} 
    {% set class = 'col-sm-9' %} 
    {% else %} 
    {% set class = 'col-sm-12' %} 
    {% endif %} 
    <div id="content" class="{{ class }} all-blog">{{ content_top }} 
    <div class="breadcrumb-container">
  <h2 class="page-title">{{ heading_title }}</h2>
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %} 
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %} 
  </ul>
</div>
      <h1>{{ text_blogs }}</h1>
      {% if (blogs) %} 
        {% for blog in blogs %} 
          <div class="sdsarticleCat clearfix row">
            {% if blog.blog_data %} 
              {% for topic in blog.blog_data %} 
                <div class="blog-content">
                    {% if topic.image %} 
                      <div class="blog-left-content articleContent col-lg-6 col-md-12 col-sm-12">
                        <div class="blog-image">
                          <img src="{{ topic.image }}" alt="{{ heading_title }}" title="{{ heading_title }}" class="img-responsive" />
                          <div class="post-image-hover"> </div>
                          <p class="post_hover"><a class="icon zoom" title="Click to view Full Image " href="{{ topic.image }}" data-lightbox="example-set"><i class="fa fa-search-plus"></i> </a><a class="icon readmore_link" title="Click to view Read More " href="{{ topic.href }}"><i class="fa fa-link"></i></a></p>
                        </div>
                      </div>
                    {% endif %} 
                      <div class="blog-right-content smartblog-desc col-lg-6 col-md-12 col-sm-12">
                        <div class="blog-date-comment">
                          <div class="blog-title"><a href="{{ topic.href }}">{{ topic.title }}</a></div>
                          <div class="blog-date">{{ topic.date_added }}</div>
                          <div class="comment-wrapper">
                            <i class="fa fa-comments"></i> <span class="write-comment-count">{{ topic.total_comments }} {{ entry_comment }}</span>
                            <span class="write-comment"> <a href="{{ topic.href }}">{{ text_leave_comment }}</a> </span>
                          </div>
                        </div>
                        <div class="blog-desc">{{ topic.description |slice(0, 200) }} </div>      
                        <div class="read-more"><a href="{{ topic.href }}" class="btn btn-default">{{ text_read_more }}</a></div>  
                      </div>
                </div>
              {% endfor %} 
            {% else %} 
              <div class="panel-body text-center">{{ text_no_blogs }}</div>
            {% endif %} 
          </div>
        {% endfor %} 
      {% else %} 
        <div class="panel-body text-center">{{ text_no_blogs }}</div>
      {% endif %} 
      {{ content_middle }}{{ content_bottom }}
    </div>
  {{ column_right }}</div>
</div>
{{ footer }}